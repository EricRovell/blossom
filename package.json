{
  "name": "@ericrovell/blossom",
  "version": "1.3.2",
  "description": "Blossom is a JS library tool for colour manipulations and transformations.",
  "main": "./index.js",
  "module": "./index.mjs",
  "scripts": {
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "test": "jest --config ./jest.config.json --coverage",
    "check-types": "tsc --noEmit true",
    "build": "rm -rf ./dist/* && rollup --config",
    "build:post": "cp *.json dist && cp *.md dist",
    "npm:release": "cd dist && npm publish --access public",
    "release": "npm run build && npm run build:post && npm run npm:release"
  },
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js",
      "default": "./index.mjs"
    },
    "./plugins/harmonies": {
      "import": "./plugins/harmonies.mjs",
      "require": "./plugins/harmonies.js",
      "default": "./plugins/harmonies.mjs"
    },
    "./plugins/monochromatic": {
      "import": "./plugins/monochromatic.mjs",
      "require": "./plugins/monochromatic.js",
      "default": "./plugins/monochromatic.mjs"
    }
  },
  "keywords": [
    "color",
    "transform",
    "convert",
    "harmony colors",
    "rgb",
    "hex",
    "hsl",
    "hsv",
    "cmyk"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericrovell/blossom.git"
  },
  "author": "Eric Rovell",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "jest": "^27.0.6",
    "rollup": "^2.54.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.4",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "types": "index.d.ts",
  "bugs": {
    "url": "https://github.com/ericrovell/blossom/issues"
  },
  "homepage": "https://github.com/ericrovell/blossom#readme",
  "directories": {
    "test": "tests"
  },
  "engines": {
    "node": ">=14.0"
  }
}
