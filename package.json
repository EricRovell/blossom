{
  "name": "@ericrovell/blossom",
  "version": "1.2.0",
  "description": "Blossom is a JS library tool for colour manipulations and transformations.",
  "main": "./index.js",
  "module": "./index.js",
  "scripts": {
    "test": "jest --coverage",
    "build": "rm -rf ./dist/* && rollup --config",
    "build:post": "cp *.json dist && cp *.md dist",
    "npm:release": "cd dist && npm publish --access public",
    "release": "npm run build && npm run build:post && run npm:release"
  },
  "keywords": [
    "color",
    "transform",
    "convert",
    "harmony colors",
    "rgb",
    "hex",
    "hsl",
    "hsv",
    "cmyk"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericrovell/blossom.git"
  },
  "author": "Eric Rovell",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "rollup": "^2.54.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.4",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "types": "index.d.ts",
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)": "<rootDir>/src/$1",
      "^@util/(.*)": "<rootDir>/src/util/$1",
      "^@models/(.*)": "<rootDir>/src/models/$1",
      "^@manipulation": "<rootDir>/src/manipulation/index.ts",
      "^@properties": "<rootDir>/src/properties/index.ts",
      "^@plugins/(.*)": "<rootDir>/src/plugins/$1"
    },
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/ericrovell/blossom/issues"
  },
  "homepage": "https://github.com/ericrovell/blossom#readme",
  "directories": {
    "test": "tests"
  },
  "engines": {
    "node": ">=14.0"
  }
}
